<RelativeLayout
    android:id="@+id/fragment_header_search_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:alpha="0"
    android:background="@color/red"
    android:elevation="4dp"
    android:minHeight="48dp"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <com.robotoole.flickrlist.app.widget.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        app:floatLabelTextAppearance="@style/Widget.FlickrList.EditText.FloatLabel">

        <EditText
            android:id="@+id/fragment_header_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/edittext_green_gray_underline"
            android:hint="@string/search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="12dp"/>

    </com.robotoole.flickrlist.app.widget.FloatLabelLayout>

    <ImageView
        android:id="@+id/fragment_header_button_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_black_18dp"/>
</RelativeLayout>